doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='/js/jquery.min.js')
    script(src='/js/bootstrap.min.js')
    script(src='/js/jquery.form.js')
    script(src="/js/index.js",type="text/javascript")
  body
    div.header
    div.container
      div.body_container
        .row
          .col-lg-12.col-box
            span 报名状态
            span#signState.label.label-default 未开始
            button.btn.btn-sm.btn-warning.pull-right.state(data-state="stateReset") 重置报名
            button.btn.btn-sm.btn-danger.pull-right.state(data-state="competeStop") 结束比赛
            button.btn.btn-sm.btn-primary.pull-right.state(data-state="competeStart") 开始比赛
            button.btn.btn-sm.btn-danger.pull-right.state(data-state="stateStop") 截止报名
            button.btn.btn-sm.btn-success.pull-right.state(data-state="stateStart") 开始报名
          .col-lg-12.col-box
            span 上传图片
            form#fileForm(enctype='multipart/form-data')
              input(type='file')
              input(type='submit' value="上传")
          .col-lg-12.col-box
            span 赛事报名名单审核
          .col-lg-12.col-table-box
            table.table.table-hover#teamTable.teamTable
              thead
                tr
                  th(width="20%") 战队名称
                  th(width="20%") Steam ID
                  th(width="15%") 手机号
                  th(width="15%") QQ
                  th(width="15%") 微信
                  th(width="15%") 审核
              tbody
                each item in enrolls
                  tr
                    td=item.battle_name
                    td=item.steam_id
                    td=item.mobile
                    td=item.qq
                    td=item.wechat
                    td
                      button.btn.btn-xs.btn-success 通过
                      button.btn.btn-xs.btn-danger 未通过

