doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/jquery.fileupload.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='/js/jquery.min.js')
    script(type='text/javascript',src='/js/jquery.uploadFile/jquery.ui.widget.js')
    script(type='text/javascript',src='/js/jquery.uploadFile/jquery.fileupload.js')
    script(type='text/javascript',src='/js/jquery.uploadFile/uploadExec.js')
    script(src='/js/bootstrap.min.js')
    script(src="/js/index.js",type="text/javascript")
  body
    div.header
    div.container
      div.body_container
        .row
          .col-lg-12.col-box
            span 第一轮比赛状态
            span#signState.label.label-default 未开始
            button.btn.btn-sm.btn-warning.pull-right.state(data-state="stateReset") 重置报名
            button.btn.btn-sm.btn-danger.pull-right.state(data-state="competeStop") 结束比赛
            button.btn.btn-sm.btn-primary.pull-right.state(data-state="competeStart") 开始比赛
            button.btn.btn-sm.btn-danger.pull-right.state(data-state="stateStop") 截止报名
            button.btn.btn-sm.btn-success.pull-right.state(data-state="stateStart") 开始报名
          .col-lg-12.col-box
            span 第二轮比赛状态
            span#signState2.label.label-default 未开始
            button.btn.btn-sm.btn-warning.pull-right.state2(data-state="stateReset") 重置报名
            button.btn.btn-sm.btn-danger.pull-right.state2(data-state="competeStop") 结束比赛
            button.btn.btn-sm.btn-primary.pull-right.state2(data-state="competeStart") 开始比赛
            button.btn.btn-sm.btn-danger.pull-right.state2(data-state="stateStop") 截止报名
            button.btn.btn-sm.btn-success.pull-right.state2(data-state="stateStart") 开始报名
          .col-lg-12.col-box
            span 上传图片
            span#uploadState(style='margin-left:20px')
            form.pull-right(action='' enctype='multipart/form-data' method='post' style='display: inline')
              div.btn.btn-primary.fileinput-button.uploadDiv
                i.glyphicon.glyphicon-upload
                span 上传文件
                input#uploadImage(type= 'file' name= 'files[]' style='width:100px;height:30px;' multiple= 'multiple')
          .col-lg-12.col-box
            span 赛事报名名单审核
          .col-lg-12.col-table-box
            table.table.table-hover#teamTable.teamTable
              thead
                tr
                  th(width="10%") 轮次
                  th(width="10%") uid
                  th(width="15%") 手机号
                  th(width="15%") 战队名称
                  th(width="15%") 紧急联系手机号
                  th(width="20%") 队长
                  th(width="15%") 审核
              tbody
                each item in enrolls
                  tr
                    td=item.round
                    td=item.uid
                    td=item.phone
                    td=item.battle_name
                    td=item.mobile
                    td=item.player1
                    td
                      button.btn.btn-xs.btn-success 通过
                      button.btn.btn-xs.btn-danger 未通过

